{
  "name": "monotaskr",
  "version": "0.1.0",
  "description": "JS Monorepo Task Runner",
  "author": "Botond Fekete",
  "license": "MIT",
  "bin": "lib/bin.js",
  "main": "lib/index.js",
  "homepage": "https://github.com/vacuumdreams/monotaskr#readme",
  "bugs": {
    "url": "https://github.com/vacuumdreams/monotaskr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vacuumdreams/monotaskr.git"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "scripts": {
    "build": "esbuild index.js --bundle --platform=node --outfile=lib/bin.js && esbuild src/index.js --bundle --platform=node --outfile=lib/index.js",
    "lint": "xo",
    "test": "jest",
    "prepare": "husky install"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "jest-esbuild"
    },
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
      "#ansi-styles": "chalk/source/vendor/ansi-styles/index.js",
      "#supports-color": "chalk/source/vendor/supports-color/index.js"
    }
  },
  "xo": {
    "envs": ["node"],
    "space": 2,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "import/extensions": 0,
      "unicorn/prefer-object-from-entries": 0,
      "unicorn/no-array-reduce": 0,
      "unicorn/prefer-module": 0
    },
    "overrides": [
      {
        "files": "src/__test__/*.spec.js",
        "globals": ["jest", "describe", "it", "expect", "beforeAll", "afterAll", "beforeEach", "afterEach"]
      }
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^6.0.0",
    "glob": "^7.2.0",
    "glob-promise": "^4.2.2",
    "glob-to-regexp": "^0.4.1",
    "listr": "^0.14.3"
  },
  "devDependencies": {
    "esbuild": "^0.14.27",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "jest-esbuild": "^0.2.6",
    "xo": "^0.48.0"
  },
  "keywords": [
    "cli",
    "monorepo",
    "workspace",
    "task",
    "runner",
    "javascript",
    "node",
    "precommit"
  ]
}
