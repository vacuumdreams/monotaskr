{
  "name": "monotaskr",
  "version": "0.1.0",
  "description": "JS Monorepo Task Runner",
  "author": "Botond Fekete",
  "license": "MIT",
  "bin": "lib/index.js",
  "main": "src/index.js",
  "scripts": {
    "build": "esbuild index.js --bundle --platform=node --outfile=lib/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vacuumdreams/monotaskr.git"
  },
  "bugs": {
    "url": "https://github.com/vacuumdreams/monotaskr/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "jest-esbuild"
    },
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
