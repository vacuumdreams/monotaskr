    "glob-to-regexp": "^0.4.1",
    "listr": "^0.14.3"
  },
  "devDependencies": {
    "esbuild": "^0.14.27",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-esbuild": "^0.2.6"
  },
  "keywords": [
    "cli",
    "monorepo",
    "task",
    "runner",
    "javascript"
