      "#supports-color": "chalk/source/vendor/supports-color/index.js"
    }
  },
  "homepage": "https://github.com/vacuumdreams/monotaskr#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^6.0.0",
